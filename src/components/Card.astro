---
const { title, sourceUrl, stackblitzUrl, codesandboxUrl, gitpodUrl, index } = Astro.props;
---

<style>
.card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1em;
    overflow: hidden;
    height: 100%;
    padding: 1em;
    z-index: 0;
    background: white;
    border-radius: 8px;
}

.card::before {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    content: '';
    display: block;
    background: white;
    z-index: -1;
    --corner-radius: 8;
    overflow: hidden;
}

header, .open {
    display: flex;
    flex-flow: row wrap;
    gap: 0.5em;
}

h3 {
    font-weight: bold;
    font-size: 1rem;
}

.source {
    opacity: 0.6;
    transform: scale(0.9);
    transition: opacity 120ms cubic-bezier(0.23, 1, 0.320, 1),
        transform 150ms cubic-bezier(0.23, 1, 0.320, 1);
}
.source:hover {
    opacity: 1;
    transform: scale(1);
}

header {
    justify-content: space-between;
}
</style>

<article class="card" style={`--i: ${index};`}>
    <header>
        <h3>{title}</h3>
        <a class="source" href={sourceUrl} aria-label="View Source Code">
            <img height="24" src="/github.svg" aria-hidden="true" />
        </a>
    </header>
    <div class="open">
        <a href={stackblitzUrl} aria-label="Open in StackBlitz" target="_blank" rel="noreferrer">
            <img height="32" src="/open-in-stackblitz.svg" aria-hidden="true" />
        </a>
        <a href={codesandboxUrl} aria-label="Open in CodeSandbox" target="_blank" rel="noreferrer">
            <img height="32" src="/open-in-codesandbox.svg" aria-hidden="true" />
        </a>
         <a href={gitpodUrl} aria-label="Open in Gitpod" target="_blank" rel="noreferrer">
            <img height="32" src="/open-in-gitpod.svg" aria-hidden="true" />
        </a>
    </div>
</article>

